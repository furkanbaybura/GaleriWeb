@using Galeri.ViewModel.Guest
@model GuestViewModel
@{

    ViewBag.Title = "İletişim";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">   
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
   @*  <link href="~/iletisimcss/iletisimcss.css" rel="stylesheet" /> *@
</head>
<body style="background-color:#191919">
    <div class="container-xxl py-6">
        <div class="container" style="position:relative">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s" style="visibility: visible; animation-delay: 0.1s; animation-name: fadeInUp;">

                <h1 class="mb-6" style="color:white">Bizimle İletişime Geç !</h1>
            </div>
            <div class="row g-4">
                <div class="col-12">
                    <div class="row gy-4">
                        <div class="col-md-4">
                            <div class="bg-light d-flex flex-column justify-content-center p-4" style="border:2px solid darkred;">
                                <h5 class="text-uppercase">Ulvi Ceylan</h5>
                                <p class="m-0"><i class="fa fa-envelope-open text-primary me-2"></i>Tel No : 0507 499 91 95</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="bg-light d-flex flex-column justify-content-center p-4" style="border:2px solid darkred">
                                <h5 class="text-uppercase">Batuhan Ceylan</h5>
                                <p class="m-0"><i class="fa fa-envelope-open text-primary me-2"></i>Tel No : 0507 568 66 87</p>
                            </div>
                        </div>


                    </div>
                </div>

                <div class="row mt-5">
                    <div class="col">
                        <div data-wow-delay="0.1s" style="position:relative; visibility: visible; animation-delay: 0.1s; animation-name: fadeIn;">
                            <iframe style="border:2px solid darkred;" src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12443.361627680237!2d30.564826!3d38.7673643!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cf17717a8d2a61%3A0x2ad788ac6ba54abe!2sCeylan%20Motors!5e0!3m2!1str!2str!4v1715091374033!5m2!1str!2str" width="500" height="350" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                        </div>
                    </div>


                    <div class="col">
                        <div class="wow fadeInUp" data-wow-delay="0.2s" style="visibility: visible; animation-delay: 0.2s; animation-name: fadeInUp;">
                            <h5 style="color:white">Sizi Arayalım !</h5>
                            <form asp-action="SendMessage" asp-controller="İletisim" method="post">
                                @Html.AntiForgeryToken()
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" class="form-control" asp-for="Name" placeholder="İsminiz">
                                            <label asp-for="Name">İsminiz</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" class="form-control" asp-for="Surname" placeholder="Soyisminiz">
                                            <label asp-for="Surname">Soyisminiz</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="tel" class="form-control" asp-for="Phone" placeholder="Telefon Numaranız">
                                            <label asp-for="Phone">Telefon Numaranız</label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating">
                                            <input type="text" class="form-control" asp-for="Description" placeholder="Konu">
                                            <label asp-for="Description">Konu</label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating">
                                            <textarea class="form-control" asp-for="Message" placeholder="Lütfen Detayları Yazınız" style="height: 100px"></textarea>
                                            <label asp-for="Message">Lütfen Detayları Yazınız</label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <button class="btn btn-primary w-100 py-3" type="submit">Mesaj Gönder</button>
                                    </div>
                                </div>
                            </form>

                        </div>


                    </div>

                    @* bitiş *@

                   
                </div>
            </div>
        </div>
    </div>

</body>

