                    </li> *@
                    <li class="nav-item">
                        <a style="font-size:20px;color:white" class="nav-link @(ViewBag.Title == "Hakkımızda" ? "active" : "") link123" text-dark" asp-area="" asp-controller="Hakkımızda" asp-action="Index">Hakkımızda</a>
                    </li>
                    <li class="nav-item">
                        <a style="font-size:20px;color:white" class="nav-link @(ViewBag.Title == "İletişim" ? "active" : "") link123" text-dark" asp-area="" asp-controller="İletisim" asp-action="Index">İletişim</a>
                    </li>
                </ul>
